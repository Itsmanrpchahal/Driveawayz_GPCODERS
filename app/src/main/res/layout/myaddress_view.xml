<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">


    <ImageView
        android:id="@+id/card_image"
        android:padding="8dp"
        android:layout_centerVertical="true"
        android:layout_width="@dimen/margin_dp70"
        android:layout_height="@dimen/margin_dp70"
        android:src="@drawable/ic_loclist">

    </ImageView>

    <LinearLayout
        android:id="@+id/layout"
        android:padding="8dp"
        android:layout_toLeftOf="@+id/edit_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/margin_dp8"
        android:layout_toRightOf="@id/card_image"
        android:orientation="vertical">


        <TextView
            android:id="@+id/street_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Street"
            android:textColorHint="@color/black"
            android:textColor="@color/black">

        </TextView>

        <TextView
            android:id="@+id/address_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Location"
            android:textColorHint="@color/black"
            android:textColor="@color/black">

        </TextView>

    </LinearLayout>

    <ImageButton
        android:id="@+id/edit_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@color/transparent"
        android:src="@drawable/ic_baseline_edit_location_alt_24"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/defaultmargin">

    </ImageButton>

    <View
        android:layout_below="@id/layout"
        android:layout_marginTop="@dimen/margin_dp10"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black">

    </View>
</RelativeLayout>