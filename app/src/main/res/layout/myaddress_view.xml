<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">


    <ImageView
        android:id="@+id/card_image"
        android:padding="8dp"
        android:layout_centerVertical="true"
        android:layout_width="@dimen/margin_dp70"
        android:layout_height="@dimen/margin_dp70"
        android:src="@drawable/ic_loclist">

    </ImageView>

    <LinearLayout
        android:id="@+id/layout"
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="50dp"
        android:layout_toRightOf="@id/card_image"
        android:orientation="vertical">


        <TextView
            android:id="@+id/street_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Street"
            android:textColorHint="@color/black"
            android:textColor="@color/black">

        </TextView>

        <TextView
            android:id="@+id/address_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Location"
            android:textColorHint="@color/black"
            android:textColor="@color/black">

        </TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/edit_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:layout_marginBottom="@dimen/margin_dp3"
            android:src="@drawable/ic_baseline_edit_location_alt_24"
            android:layout_marginRight="@dimen/defaultmargin">

        </ImageButton>

        <ImageButton
            android:id="@+id/delete_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:layout_marginTop="@dimen/margin_dp3"
            android:src="@drawable/ic_baseline_delete_forever_24"
            android:layout_marginRight="@dimen/defaultmargin">

        </ImageButton>

    </LinearLayout>

    <View
        android:id="@+id/view"
        android:layout_below="@id/layout"
        android:layout_marginTop="@dimen/margin_dp10"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black">

    </View>

</RelativeLayout>