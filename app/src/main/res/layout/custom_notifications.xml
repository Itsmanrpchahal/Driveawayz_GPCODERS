<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/margin_dp5"
        app:cardBackgroundColor="@color/grey"
        app:cardElevation="@dimen/margin_dp5">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/notifcation_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textColor="@color/black"
                android:layout_margin="@dimen/margin_dp5"
                android:fontFamily="@font/opensans_regular">

            </TextView>

            <TextView
                android:id="@+id/notifcation_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/notifcation_title"
                android:text="Date"
                android:layout_marginLeft="@dimen/margin_dp5"
                android:layout_marginBottom="@dimen/margin_dp5"
                android:textColor="@color/black"
                android:fontFamily="@font/opensans_regular">

            </TextView>

        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>