<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_bc"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="@dimen/margin_dp120"
        android:layout_height="@dimen/margin_dp120"
        android:src="@drawable/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_dp100">

    </ImageView>


    <Button
        android:id="@+id/login_bt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo"
        android:layout_marginTop="@dimen/margin_dp60"
        android:layout_marginLeft="@dimen/margin_dp60"
        android:layout_marginRight="@dimen/margin_dp60"
        android:textColor="@color/white"
        android:background="@drawable/round_border"
        android:text="Sign In"
        android:textAllCaps="false"
        android:textSize="@dimen/textsize_sp16">

    </Button>

    <LinearLayout
        android:id="@+id/or_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_bt"
        android:layout_marginTop="@dimen/margin_dp40"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <View
            android:layout_width="@dimen/margin_dp100"
            android:layout_height="@dimen/margin_dp1"
            android:background="@color/white"
            android:layout_gravity="center_vertical">

        </View>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="    OR    "
            android:textSize="@dimen/textsize_sp16"
            android:textColor="@color/white">

        </TextView>

        <View
            android:layout_width="@dimen/margin_dp100"
            android:layout_height="1dp"
            android:layout_gravity="center_vertical"
            android:background="@color/white">

        </View>
    </LinearLayout>

    <Button
        android:id="@+id/signup_bt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/or_layout"
        android:layout_marginTop="@dimen/margin_dp40"
        android:textColor="@color/white"
        android:layout_marginLeft="@dimen/margin_dp60"
        android:layout_marginRight="@dimen/margin_dp60"
        android:background="@drawable/round_border"
        android:text="Sign Up"
        android:textAllCaps="false"
        android:textSize="@dimen/textsize_sp16">

    </Button>

</RelativeLayout>