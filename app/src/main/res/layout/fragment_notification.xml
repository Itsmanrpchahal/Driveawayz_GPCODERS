<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent_notifications"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".dashboard.notificationFrag.NotificationFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/notifications_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_dp5">

    </androidx.recyclerview.widget.RecyclerView>

    <ImageButton
        android:id="@+id/clear_notifications"
        android:layout_below="@id/notifications_recycler"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_dp5"
        android:visibility="gone"
        android:src="@drawable/ic_baseline_close_24_white"
        android:background="@drawable/circle_bc"
        android:layout_width="@dimen/margin_dp40"
        android:layout_height="@dimen/margin_dp40">

    </ImageButton>
</RelativeLayout>